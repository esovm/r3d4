#xn 50 #yn 100

:player
	xn yn 'mario sprite
	xypen 32 dup 'mario spritesize
	70 100 msec 3 << 'mario rsprite
	acursor
	;

#val

:ongame
	cls home $ff00 'ink !
	xypen .d print " " print .d print cr
	val .h print cr

	key
	1? ( dup 'val ! )
	<up> =? ( -1 'yn +! )
	<dn> =? ( 1 'yn +! )
	<le> =? ( -1 'xn +! )
	<ri> =? ( 1 'xn +! )

	>esc< =? ( exit )
	drop
	player
	minidraw
	;
:
sw 2 >> sh 2 >> miniscreen
'ongame onshow
;

